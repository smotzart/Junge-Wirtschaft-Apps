<ScrollView xmlns:Card="nativescript-cardview" loaded="onTabLoaded" unloaded="onTabUnloaded">
    <StackLayout>
        <Card:CardView cssClass="card card-header" elevation="7" radius="1">
            <GridLayout rows="124, auto" columns="*" >
                <StackLayout row="0">
                    <image src="{{ event.banner_url || '~/images/placeholder.png' }}" stretch="aspectFill" />
                </StackLayout>
                <StackLayout row="1" padding="20 22 20 22" tap="goToInfoTab">
                    <Label textWrap="true" cssClass="head-label">
                        <Label.formattedText>
                            <FormattedString>
                                <FormattedString.spans>
                                    <Span text="{{ event.description | textTruncate(100) }}"/>
                                    <Span text=" Mehr â€º" fontSize="14" fontFamily="karmina" foregroundColor="#0d5775" visibility="{{ event.description.length > 100 ? 'visible' : 'collapsed' }}"/>
                                </FormattedString.spans>
                            </FormattedString>
                        </Label.formattedText>
                    </Label>
                </StackLayout>
            </GridLayout>
        </Card:CardView>
        <Card:CardView cssClass="card card-wide card-date" elevation="7" radius="1" visibility="{{ ( start || end ) ? 'visible' : 'collapsed' }}">
            <StackLayout height="69" verticalAlignment="center" orientation="horizontal">
                <label text="&#xf073;" cssClass="fa" />
                <label text="{{ start + ' - ' + end }}" />
            </StackLayout>
        </Card:CardView>
        <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ event.route ? 'visible' : 'collapsed' }}">
            <GridLayout rows="25, *" columns="*">
               <Label row="0" cssClass="card-title" text="ANFAHRT" />
               <StackLayout row="1" cssClass="card-body">
                    <Label cssClass="last" textWrap="true" text="{{ event.route }}" />
               </StackLayout>
            </GridLayout>
        </Card:CardView>
        <Button text="Jetzt als Besucher zur Messe anmelden" tap="openTicketUrl" cssClass="btn" margin="0 6 25 6" />
        <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ event.location_details ? 'visible' : 'collapsed' }}">
            <GridLayout rows="25, *" columns="*">
               <Label row="0" cssClass="card-title" text="LOCATION" />
               <StackLayout row="1" cssClass="card-body">
                    <Label cssClass="last" textWrap="true" text="{{ event.location_details }}" />
               </StackLayout>
            </GridLayout>
        </Card:CardView>        
        <Card:CardView cssClass="card card-text" elevation="7" radius="3">
            <GridLayout rows="25, *" columns="*">
               <Label row="0" cssClass="card-title" text="ADRESSE" />
               <StackLayout row="1" cssClass="card-body card-body-address">
                    <Label textWrap="true" text="{{ event.zip + ' ' + event.city }}" />
                    <Label textWrap="true" text="{{ event.country | countryName() }}" />
               </StackLayout>
            </GridLayout>
        </Card:CardView>
    </StackLayout>
</ScrollView>