<ScrollView xmlns:Card="nativescript-cardview">
  <StackLayout>
    <Card:CardView cssClass="card card-header" elevation="7" radius="1">
      <GridLayout rows="auto, auto, 30, 30" columns="*, *" padding="35 22 20 22">
        <label row="0" colSpan="2" text="{{ event.name }}" cssClass="h1" textWrap="true" />
        <label row="1" colSpan="2" text="{{ event.description }}" cssClass="h3" textWrap="true" marginBottom="5" />
        <StackLayout row="2" colSpan="2" cssClass="card-header-icon" verticalAlignment="center" orientation="horizontal">
          <GridLayout rows="auto" columns="25, *">
            <label row="0" col="0" text="&#xf073;" cssClass="fa" />
            <label row="0" col="1" text="{{ event_date }}" />
          </GridLayout>
        </StackLayout>
        <StackLayout row="3" colSpan="2" cssClass="card-header-icon" verticalAlignment="center" orientation="horizontal">
          <GridLayout rows="auto" columns="25, *">
            <label row="0" col="0" text="&#xf017;" cssClass="fa" />
            <label row="0" col="1" text="{{ event_time }}" />
          </GridLayout>
        </StackLayout>
      </GridLayout>
    </Card:CardView>
    <Card:CardView cssClass="card card-text" elevation="7" radius="3">
      <GridLayout rows="25, *" columns="*">
        <Label row="0" cssClass="card-title" text="IHR TICKET" />
        <StackLayout row="1" cssClass="card-body">
          <Label cssClass="last" textWrap="true" text="FÃ¼r den Besuch der Messe ist eine Registrierung notwendig. Bitte folgen Sie dem Link zu unserem Ticket-Shop" />
        </StackLayout>
      </GridLayout>
    </Card:CardView>
    <Button text="Jetzt als Besucher zur Messe anmelden" tap="{{ openTicketUrl }}" cssClass="btn" margin="0 6 25 6" />            
  </StackLayout>
</ScrollView>