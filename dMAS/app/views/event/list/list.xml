<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
  navigatingTo="navigatingTo" 
  backgroundColor="#f4f4f4" 
  actionBarHidden="true"
>

  <GridLayout rows="50, *">
    <GridLayout row="0" className="header-actionbar" columns="50, *, 50">
      <StackLayout col="1" verticalAlignment="center">
        <Label text="Messen" horizontalAlignment="center" />
      </StackLayout>
    </GridLayout>
    <GridLayout row="1">
      <TabView tabBackgroundColor="#ffffff" androidSelectedTabHighlightColor="#ee6f06" selectedTabTextColor="#ee6f06" selectedIndex="0" selectedIndexChanged="onSelectedIndexChanged">
        <TabView.items>
          <TabViewItem title="Alle" xmlns:AllTab="tabs/list">
            <TabViewItem.view>
              <AllTab:list />
            </TabViewItem.view>
          </TabViewItem>
          <TabViewItem title="Publikumsmessen" xmlns:PublicTab="tabs/list">
            <TabViewItem.view>
              <PublicTab:list />
            </TabViewItem.view>
          </TabViewItem>
          <TabViewItem title="Fachmessen" xmlns:TraderTab="tabs/list">
            <TabViewItem.view>
              <TraderTab:list />
            </TabViewItem.view>
          </TabViewItem>
          <TabViewItem title="Kongresse" xmlns:ConfTab="tabs/list">
            <TabViewItem.view>
              <ConfTab:list />
            </TabViewItem.view>
          </TabViewItem>
        </TabView.items>
      </TabView>
    </GridLayout>
  </GridLayout>
</Page>
