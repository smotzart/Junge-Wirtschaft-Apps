<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:Card="nativescript-cardview" backgroundColor="#f4f4f4" navigatingTo="navigatingTo" actionBarHidden="true">
  <GridLayout rows="50, *">
    <GridLayout row="0" cssClass="header-actionbar" columns="50, *, 50">
      <StackLayout col="0" verticalAlignment="center">
        <Button text="&#xf053;" cssClass="fa" tap="goBack" />
      </StackLayout>
      <StackLayout col="1" verticalAlignment="center">
        <Label text="{{ trader.company }}" horizontalAlignment="center" />
      </StackLayout>
    </GridLayout>
    <StackLayout row="1">
      <ScrollView>
        <StackLayout>
          <Card:CardView cssClass="card card-header" elevation="7" radius="1">
            <GridLayout rows="*, auto" columns="*">
              <GridLayout row="0" rows="*" columns="*, 100" padding="35 22 20 22">
                <StackLayout col="0" verticalAlignment="center">
                  <label text="{{ trader.company }}" textWrap="true" cssClass="h1" />
                </StackLayout>
                <StackLayout col="1">
                  <image src="{{ trader.image_url }}" stretch="aspectFit" />
                </StackLayout>                        
              </GridLayout>
              <GridLayout row="1" rows="*" columns="*, 70" cssClass="card-footer" visibility="{{ trader.stand ? 'visible' : 'collapsed' }}">
                <StackLayout col="0" height="39" cssClass="card-attr" verticalAlignment="center" orientation="horizontal">
                  <label text="&#xf041;" cssClass="fa" />
                  <label text="{{ trader.stand }}" />
                </StackLayout>
                <StackLayout col="1" height="39" width="70" verticalAlignment="center" tap="{{ toggleFavourite }}">
                  <label text="{{ isFavourite ? '&#xf005;' : '&#xf006;' }}" cssClass="{{ isFavourite ? 'fa isFavTrue' : 'fa isFavFalse' }}" horizontalAlignment="center" fontSize="24" />
                </StackLayout>
              </GridLayout>
            </GridLayout>
          </Card:CardView>
          <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ trader.products ? 'visible' : 'collapsed' }}">
            <GridLayout rows="25, *" columns="*">
              <Label row="0" cssClass="card-title" text="PRODUKTE" />
              <StackLayout row="1" cssClass="card-body">
                <Label cssClass="last" textWrap="true" text="{{ trader.products }}" />
              </StackLayout>
            </GridLayout>
          </Card:CardView>
          <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ trader.address || trader.zip || trader.city || trader.country ? 'visible' : 'collapsed' }}">
            <GridLayout rows="25, *" columns="*">
              <Label row="0" cssClass="card-title" text="ADRESSE" />
              <StackLayout row="1" cssClass="card-body card-body-address">
                <Label textWrap="true" text="{{ trader.address }}" visibility="{{ trader.address ? 'visible' : 'collapsed' }}" />
                <Label textWrap="true" text="{{ trader.zip + ' ' + trader.city }}" />
                <Label textWrap="true" text="{{ trader.country | countryName() }}" visibility="{{ trader.country ? 'visible' : 'collapsed' }}" />
              </StackLayout>
            </GridLayout>
          </Card:CardView>
          <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ trader.website ? 'visible' : 'collapsed' }}" tap="{{ visitWebsite }}">
            <GridLayout rows="25, *" columns="*">
              <Label row="0" cssClass="card-title" text="WEBSITE" />
              <StackLayout row="1" cssClass="card-body card-body-address">
                <Label textWrap="true" height="23" text="{{ trader.website }}" />
              </StackLayout>
            </GridLayout>
          </Card:CardView>
          <Card:CardView cssClass="card card-text" elevation="7" radius="3" visibility="{{ trader.email ? 'visible' : 'collapsed' }}" tap="{{ sendEmail }}">
            <GridLayout rows="25, *" columns="*">
              <Label row="0" cssClass="card-title" text="E-MAIL" />
              <StackLayout row="1" cssClass="card-body card-body-address">
                <Label textWrap="true" height="23" text="{{ trader.email }}" />
              </StackLayout>
            </GridLayout>
          </Card:CardView>
          <StackLayout marginTop="0" verticalAlignment="center" height="40" cssClass="card-separate-head" style="padding-left:17;">
            <label text="BRANCHEN" cssClass="theme-color" />
          </StackLayout> 
          <Repeater items="{{ products }}">
            <Repeater.itemsLayout>
              <WrapLayout />
            </Repeater.itemsLayout>
            <Repeater.itemTemplate>
              <GridLayout rows="44" columns="*" verticalAlignment="center" backgroundColor="white">
                <label row="0" col="0" text="{{ $value }}" cssClass="productListItem" />
              </GridLayout>
            </Repeater.itemTemplate>
          </Repeater>
        </StackLayout>
      </ScrollView>
    </StackLayout>
  </GridLayout>
</Page>